<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends Page"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp">

            <!-- EditText for typing friend's name -->
            <EditText
                android:id="@+id/friendNameEditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter friend's name"
                android:inputType="text" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Button to initiate the search -->
                <Button
                    android:id="@+id/friendSearchButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_gravity="center" />

                <!-- Button to initiate find new friends -->
                <Button
                    android:id="@+id/goRecommendPageButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Find New Friends"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!--Friend List-->
            <ListView
                android:id="@+id/friendsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/black"
                android:dividerHeight="2dp"
                android:listSelector="@color/purple_200"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>