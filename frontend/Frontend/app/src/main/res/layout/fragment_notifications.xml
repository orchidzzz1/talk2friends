<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfilePageActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Page"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="40dp">

            <Button
                android:id="@+id/signOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sign Out" />

            <!-- User's Name -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER NAME"
                android:textSize="36sp" />


            <!-- User's Affiliation -->
            <TextView
                android:id="@+id/affiliationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Affiliation: STUDENT"
                android:textSize="24sp" />

            <!-- User's Role -->
            <TextView
                android:id="@+id/roleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role: INTERNATIONAL"
                android:textSize="24sp" />

            <!-- Created Meetings -->
            <TextView
                android:id="@+id/createdMeetingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created Meetings"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/createdMeetingsSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/interestsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interests"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/interestsSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <!--Meeting List-->
            <!--ListView
                android:id="@+id/createdMeetingsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/black"
                android:dividerHeight="2dp"
                android:listSelector="@color/purple_200" /-->

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>